{
  "rules": {
    ".read": false,
    ".write": false,
    "chatrooms": {
      ".read": "auth != null",
      "$roomId": {
        ".write": "auth != null",
        "messages": {
          ".read": "auth != null && root.child('chatrooms').child($roomId).child('members').child(auth.uid).exists()",
          ".write": "auth != null && root.child('chatrooms').child($roomId).child('members').child(auth.uid).exists()",
          "$messageId": {
            ".validate": "newData.hasChildren(['text', 'userId', 'email', 'timestamp'])",
            "userId": {
              ".validate": "newData.val() === auth.uid"
            },
            "email": {
              ".validate": "newData.val() === auth.email"
            }
          }
        },
        "members": {
          ".read": "auth != null",
          "$userId": {
            ".write": "auth != null && (auth.uid === $userId || root.child('chatrooms').child($roomId).child('createdBy').val() === auth.uid)"
          }
        },
        "name": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 100"
        },
        "description": {
          ".validate": "newData.isString() && newData.val().length <= 500"
        }
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid === $userId",
        ".write": "auth != null && auth.uid === $userId",
        "email": {
          ".validate": "newData.val() === auth.email"
        },
        "lastOnline": {
          ".validate": "newData.val() <= now"
        }
      }
    },
    "messages": {
      // 只允許已認證的用戶讀寫消息
      ".read": "auth != null",
      ".write": "auth != null",
      "$messageId": {
        // 驗證消息格式
        ".validate": "newData.hasChildren(['userId', 'userEmail', 'text', 'timestamp'])",
        "userId": {
          ".validate": "newData.val() == auth.uid"
        },
        "userEmail": {
          ".validate": "newData.isString()"
        },
        "text": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 1000"
        },
        "timestamp": {
          ".validate": "newData.isNumber()"
        }
      }
    },
    "com_list": {
      // 只允許已認證的用戶讀寫
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}